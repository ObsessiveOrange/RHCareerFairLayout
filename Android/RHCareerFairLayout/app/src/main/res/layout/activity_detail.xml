<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_DetailCompanyName"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_companyWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_DetailWebsite"
            android:autoLink="web"/>

        <android.widget.Space
            android:id="@+id/detail_description_spacer"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/detail_description_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_DetailDescription"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lipsum" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_majors_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_DetailMajors"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_majors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_DetailMajors" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_positionTypes_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_DetailPositionTypes"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_positionTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_DetailPositionTypes" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_workAuthorizations_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_DetailWorkAuthorizations"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_workAuthorizations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_DetailWorkAuthorizations" />

        <android.widget.Space
            android:id="@+id/detail_address_spacer"
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_address_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_DetailAddress"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_DetailAddress" />
    </LinearLayout>
</ScrollView>