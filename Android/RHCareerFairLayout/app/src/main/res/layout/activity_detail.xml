<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_companyWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website"
            android:autoLink="web"/>

        <android.widget.Space
            android:id="@+id/detail_description_spacer"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/detail_description_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lipsum" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_majors_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Majors:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_majors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Majors" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_positionTypes_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position Types:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_positionTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position Types" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_workAuthorizations_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Authorizations:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_workAuthorizations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Authorizations" />

        <android.widget.Space
            android:id="@+id/detail_address_spacer"
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/detail_address_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />
    </LinearLayout>
</ScrollView>