<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">
	<servlet>
		<servlet-name>Data Servlet</servlet-name>
		<servlet-class>servlets.data.DataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Data Servlet</servlet-name>
		<url-pattern>/data/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Users Servlet</servlet-name>
		<servlet-class>servlets.users.UsersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Users Servlet</servlet-name>
		<url-pattern>/users/*</url-pattern>
	</servlet-mapping>
         
    
 	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Force all to HTTPS</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>

		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
    
</web-app>

